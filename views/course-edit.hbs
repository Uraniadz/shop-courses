<h1>Редагувати курс {{course.title}}</h1>
{{#if error}}
  <p class='alert'>{{error}}</p>
{{/if}}
<form class='form-course-edit' action='/courses/edit' method='post'>
  <div class='input-field'>
    <input
      id='title'
      name='title'
      type='text'
      class='validate'
      required
      value={{course.title}}
    />
    <label for='title'>Назва курсу</label>
    <span class='helper-text' data-error='напишіть назву'></span>
  </div>
  <div class='input-field'>
    <input
      id='price'
      name='price'
      type='number'
      class='validate'
      required
      min='1'
      value={{course.price}}
    />
    <label for='price'>Ціна курсу</label>
    <span class='helper-text' data-error='напишіть ціну'></span>
  </div>
  <div class='input-field'>
    <input
      id='img'
      name='img'
      type='text'
      class='validate'
      required
      value={{course.img}}
    />
    <label for='img'>URL картинки</label>
    <span class='helper-text' data-error='введіть url картинку'></span>
  </div>
  <input name='_id' type='hidden' value={{course._id}} />
  <input type='hidden' name='_csrf' value='{{csrf}}' />
  <button type='submit' class='btn btn-primary'>Редагувати курс</button>
</form>
<form action='/courses/remove' method='POST'>
  <input type='hidden' name='_csrf' value='{{csrf}}' />
  <input type='hidden' name='_id' value={{course._id}} />
  <button type='submit' class='btn red'>Видалити курс</button>
</form>