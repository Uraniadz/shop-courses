<div class='auth'>
  <div class='row'>
    <div class='col s12'>
      <ul class='tabs'>
        <li class='tab col s6'><a class='active' href='#login'>Вхід</a></li>
        <li class='tab col s6'><a
            class='active'
            href='#register'
          >Реєстрація</a></li>
      </ul>
    </div>
    {{! авторизація }}
    <div id='login' class='col s6 offset-s3'>
      {{#if loginError}}
      <p class="alert">{{loginError}}</p>
      {{/if}}
      <h1>Вхід в магазин</h1>
      <form action='/auth/login' method='post'>
        <div class='input-field'>
          <input
            id='email'
            name='email'
            type='email'
            class='validate'
            required
          />
          <label for='email'>Email</label>
          <span class='helper-text' data-error='напишіть email'></span>
        </div>
        <div class='input-field'>
          <input
            id='password'
            name='password'
            type='password'
            class='validate'
            required
          />
          <label for='password'>Пароль</label>
          <span class='helper-text' data-error='напишіть пароль'></span>
        </div>
      <input type="hidden" name="_csrf" value="{{csrf}}">
      <p><a href="/auth/reset">Забули пароль?</a></p> 
        <button type='submit' class='btn btn-primary'>Увійти</button>
      </form>
    </div>

    {{! реєстрація }}
    <div id='register' class='col s6 offset-s3'>
       {{#if registerError}}
      <p class="alert">{{registerError}}</p>
      {{/if}}
      <h1>Створити акаунт</h1>
      
      <form action='/auth/register' method='post' novalidate>
        <div class='input-field'>
          <input
            id='remail'
            name='email'
            type='email'
            class='validate'
            {{!-- required --}}
          />
          <label for='remail'>Email</label>
          <span class='helper-text' data-error='напишіть email'></span>
        </div>
        <div class='input-field'>
          <input
            id='rpassword'
            name='password'
            type='password'
            class='validate'
            required
          />
          <label for='rpassword'>Пароль</label>
          <span class='helper-text' data-error='напишіть пароль'></span>
        </div>
        {{! пароль повторний }}
        <div class='input-field'>
          <input
            id='confirm'
            name='confirm'
            type='password'
            class='validate'
            required
          />
          <label for='confirm'>Пароль ще раз</label>
          <span class='helper-text' data-error='напишіть пароль'></span>
        <div class='input-field'>
          <input
            id='name'
            name='name'
            type='text'
            class='validate'
            required
          />
          <label for='confirm'>Ваше ім'я</label>
          <span class='helper-text' data-error='напишіть ім"я'></span>
        </div>
          <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type='submit' class='btn btn-primary'>Зареєструватися</button>
        <div>
      </div>
      </form>
    </div>
  </div>
</div>