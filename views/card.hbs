<h1>Корзина</h1>
<div id='card'>
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>Назва курсу</th>
          <th>Кількість</th>
          <th>Керування</th>
        </tr>
      </thead>
      <tbody>

        {{#each courses}}
          <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
              <button
                class='btn btn-small js-remove'
                data-id={{_id}}
                data-csrf='{{@root.csrf}}'
              >Видалити</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <p><strong>Ціна: </strong> <span class='price'>{{price}}</span></p>
    <form action='/orders' method='POST'>
      <input type='hidden' name='_csrf' value='{{csrf}}' />
      <button type='submit' class='btn'>Сформувати замовлення</button>
    </form>

  {{else}}
    <p>Корзина пуста</p>
  {{/if}}
</div>