<h1>Курси</h1>

{{#if courses.length}}
  {{#each courses}}

    <div class='row'>
      <div class='col s6 offset-s3'>
        <div class='card'>
          <div class='card-image'>
            <img src={{img}} alt={{title}} />
          </div>
          <div class='card-content'>
            <span class='card-title'>{{title}}</span>
            <p class='price'>{{price}}</p>
          </div>
          <div class='card-action'>
            <a href='/courses/{{_id}}' target='_blank'>Відкрити курс</a>
            {{#if @root.isAuth}}

              {{#ifeq userId._id @root.userId}}
                <a href='/courses/{{_id}}/edit?allow=true'>Редагувати</a>
              {{/ifeq}}

              <form action='/card/add' method='POST'>
                <input type='hidden' name='_id' value={{_id}} />
                <input type='hidden' name='_csrf' value='{{@root.csrf}}' />
                <button type='submit' class='btn btn-primary'>Купити курс</button>
              </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>Курсів поки немає</p>
{{/if}}